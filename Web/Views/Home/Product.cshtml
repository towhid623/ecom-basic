@model Entities.Models.Product
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
<br /><br />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img  id="zoom_01" src="@Model.ImageUrl1"  data-zoom-image="@Model.ImageUrl1" alt=""  width="100%" style="height: 270px;" >
        </div>
        <div class="col-md-6">
            <span style="display:none" class="productId">@Model.ProductHeaderId</span>

            <h6 style="font-family: 'Raleway', sans-serif;    font-size: 30px;">
                @Model.ProductName
            </h6>
            <p style="color: #777777; font-size: 15px;">
                Product Code: @Model.ProductCode <br> Price: Tk @Model.Rate
            </p>
            <input class="form-control w-50 float-left qty-input text-center" placeholder="Quantity" required type="number" value="1" min="1" max="100" /> <button type="button" class="btn btn-outline-warning ml-3 buy-btn">
                <i class="fa fa-shopping-cart" aria-hidden="true" style="font-size: x-large;margin-block: -1px;"></i>
            </button> <br>

            <br>
            <p style=" font-size: 15px;">
                Call For Details: @ViewBag.CompanyMobileNumber
            </p>
            <h6 style="font-family: 'Raleway', sans-serif;    font-size: 20px;">
                PRODUCT INFO
            </h6>
            <P style="color: #777777; font-family: 'Raleway', sans-serif; font-size: 15px;">
                @Model.Description
            </P>
        </div>
    </div>
</div>
<br>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <i class="fa fa-truck" aria-hidden="true" style="font-size: xxx-large;margin-left: 44%;color: #4a00a4;"></i>
            <a href="#" style="text-decoration: none;"><p style="text-align: center; color: #222222; font-size: large;"><b>COUNTRYWIDE DELIVERY</b></p></a>
            <P style="text-align: center; color: #4a4a4a; font-size: unset;">Within 3 Working Days</P>
        </div>
        <div class="col-md-4">
            <i class="fa fa-headphones" aria-hidden="true" style="font-size: xxx-large;margin-left: 44%;color: #4a00a4;"></i>
            <a href="#" style="text-decoration: none;"><p style="text-align: center; color: #222222; font-size: large;"><b>ALWAY SUPPORT</b></p></a>
            <P style="text-align: center; color: #4a4a4a; font-size: unset;">@ViewBag.CompanyMobileNumber</P>
        </div>
        <div class="col-md-4">
            <i class="fa fa-btc" aria-hidden="true" style="font-size: xxx-large;margin-left: 44%;color: #4a00a4;"></i>
            <a href="#" style="text-decoration: none;"><p style="text-align: center; color: #222222; font-size: large;"><b>SECURE PAYMENT</b></p></a>
            <P style="text-align: center; color: #4a4a4a; font-size: unset;">Cash On Delivery</P>
        </div>
    </div>
</div>
