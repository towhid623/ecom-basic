@section scripts{
    <script type="text/javascript" src="https://cdn.rawgit.com/igorlino/elevatezoom-plus/1.1.6/src/jquery.ez-plus.js"></script>
    <script>
        (function ($) {
            $('.spinner .btn:first-of-type').on('click', function () {
                $('.spinner input').val(parseInt($('.spinner input').val(), 10) + 1);
            });
            $('.spinner .btn:last-of-type').on('click', function () {
                if ($('.spinner input').val() == 0) {
                    $('.spinner input').val(0);
                }
                else {
                    $('.spinner input').val(parseInt($('.spinner input').val(), 10) - 1);
                }
            });
        })(jQuery);

        $("#zoom_01").ezPlus();

        $('.buy-btn').click(function () {
            debugger;
            alert('Successfully added to cart');
            products = jQuery.parseJSON(localStorage.getItem('products'));
            var productId = $(this).parent().find('.productId').html();
            var qty = $(this).parent().find('.qty-input').val();
            if (products != null) {
                var existingProduct = products.filter(f => f.ProductHeaderId == productId);
                if (existingProduct != undefined) {
                    products = products.filter(f => f.ProductHeaderId != productId);
                }
            } else {
                products = [];
            }
            var product = { ProductHeaderId: productId, Quantity: qty };
            products.push(product);
            localStorage.setItem('products', JSON.stringify(products));
            CartCount();
        });
    </script>
}